<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.group29.RegisterClientController">
    <VBox alignment="CENTER" fillWidth="false" prefHeight="500.0" prefWidth="500.0" spacing="30.0"
          AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="20.0">
        <Label prefHeight="40.0" prefWidth="197.0" text="Register Client">
            <font>
                <Font name="System Bold" size="28.0"/>
            </font>
        </Label>
        <VBox prefWidth="184.0" spacing="10.0">
            <Label text="Enter client's name :">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
            <TextField fx:id="clientNameTextField" prefHeight="32.0" prefWidth="198.0"
                       promptText="Enter client .."/>
        </VBox>
        <VBox prefWidth="184.0" spacing="10.0">
            <Label prefHeight="30.0" prefWidth="186.0" text="Enter client's phone:">
                <font>
                    <Font size="20.0"/>
                </font>
            </Label>
            <TextField fx:id="clientPhoneTextField" prefHeight="32.0" prefWidth="198.0"
                       promptText="Enter phone.."/>
        </VBox>
        <Button mnemonicParsing="false" onAction="#addClientOnAction" prefHeight="35.0" prefWidth="73.0"
                text="Add"/>
    </VBox>
</AnchorPane>
