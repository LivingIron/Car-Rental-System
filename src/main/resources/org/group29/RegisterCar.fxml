<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="RegisterCarPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group29.RegisterCarController">
   <children>
      <ComboBox fx:id="ClassComboBox" layoutX="158.0" layoutY="100.0" prefHeight="31.0" prefWidth="184.0" promptText="Select class .." />
      <Label layoutX="188.0" layoutY="59.0" prefHeight="31.0" prefWidth="125.0" text="Select vehicle class" textAlignment="CENTER" textFill="#000000c0">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <ComboBox fx:id="CategoryComboBox" layoutX="159.0" layoutY="186.0" prefHeight="31.0" prefWidth="184.0" promptText="Select category .." />
      <Label layoutX="171.0" layoutY="146.0" prefHeight="31.0" prefWidth="160.0" text="Select vehicle category" textAlignment="CENTER" textFill="#000000c0">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <TextArea fx:id="VehicleTextArea" layoutX="156.0" layoutY="272.0" prefHeight="67.0" prefWidth="188.0" promptText="Enter characteristics" />
      <Label layoutX="170.0" layoutY="235.0" prefHeight="31.0" prefWidth="160.0" text="Vehicle characteristics" textAlignment="CENTER" textFill="#000000c0">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <RadioButton fx:id="RadioSmoking" layoutX="154.0" layoutY="390.0" mnemonicParsing="false" prefHeight="17.0" prefWidth="68.0" selected="true" text="Smoking">
         <toggleGroup>
            <ToggleGroup fx:id="Smoker" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="RadioNonSmoking" layoutX="263.0" layoutY="390.0" mnemonicParsing="false" text="Non smoking" toggleGroup="$Smoker" />
      <Button fx:id="AddVehicleButton" layoutX="193.0" layoutY="432.0" mnemonicParsing="false" onAction="#addVehicleOnAction" prefHeight="25.0" prefWidth="116.0" text="Add Vehicle" />
      <Label layoutX="173.0" layoutY="350.0" prefHeight="31.0" prefWidth="171.0" text="Allowed to smoke or not" textAlignment="CENTER" textFill="#000000c0">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
      <Label layoutX="173.0" layoutY="9.0" prefHeight="40.0" prefWidth="170.0" text="Register Car">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
